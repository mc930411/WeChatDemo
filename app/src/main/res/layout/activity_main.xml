<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/textView2"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="假装是微信的Demo"
    android:textColor="@android:color/background_dark"
    android:textSize="24sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginStart="8dp"
    android:text="用户类型选择"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2"/>
  <RadioGroup
    android:id="@+id/radioGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginStart="8dp"
    android:checkedButton="@id/user_host"
    android:orientation="horizontal"
    app:layout_constraintStart_toEndOf="@+id/textView"
    app:layout_constraintTop_toBottomOf="@+id/textView2">
    <RadioButton
      android:id="@+id/user_host"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="主机"
      />
    <RadioButton
      android:id="@+id/user_remote"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="远端"/>
  </RadioGroup>
  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginStart="8dp"
    android:text="输入文本"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"/>
  <EditText
    android:id="@+id/messageText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginStart="8dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:hint="文本缺省"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>
  <Button
    android:id="@+id/addText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginStart="8dp"
    android:text="添加文本"
    app:layout_constraintStart_toEndOf="@+id/messageText"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>
  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginStart="8dp"
    android:text="输入系统\n消息"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3"/>
  <EditText
    android:id="@+id/messageSystemInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginStart="8dp"
    android:ems="10"
    android:hint="系统消息缺省"
    android:inputType="textPersonName"
    app:layout_constraintStart_toEndOf="@+id/textView4"
    app:layout_constraintTop_toBottomOf="@+id/messageText"/>
  <Button
    android:id="@+id/addSystemInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="8dp"
    android:text="添加消息"
    app:layout_constraintStart_toEndOf="@+id/messageSystemInfo"
    app:layout_constraintTop_toBottomOf="@+id/addText"/>
  <Button
    android:id="@+id/addImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="添加本机图片"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/messageSystemInfo"/>
  <Button
    android:id="@+id/startApply"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="开始渲染消息队列"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/addImage"/>
  <TextView
    android:id="@+id/usage"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:scrollbars="vertical"
    android:text="使用指南"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/startApply"/>

</androidx.constraintlayout.widget.ConstraintLayout>